<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_color_2"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomepageFragment"
        >

        <TextView
            android:id="@+id/appName"
            android:layout_width="300dp"
            android:layout_height="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"
            android:textSize="60sp"
            android:text="Museo"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <Button
            android:id="@+id/viewAllArtworksButton"
            android:layout_width="300dp"
            android:layout_height="75dp"
            app:layout_constraintTop_toBottomOf="@+id/appName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="100dp"
            android:text="View All Artworks"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/searchArtworksButton"
            android:layout_width="300dp"
            android:layout_height="75dp"
            app:layout_constraintTop_toBottomOf="@+id/viewAllArtworksButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:text="Search Artworks"
            android:textSize="25sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

